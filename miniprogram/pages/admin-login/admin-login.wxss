/* 管理员登录页面样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-form {
  width: 100%;
  max-width: 500rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #1976D2;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  background: #1976D2;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-top: 20rpx;
}

.login-btn.loading {
  background: #ccc;
}

.login-tips {
  margin-top: 40rpx;
  text-align: center;
}

.tip {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.back-to-student {
  margin-top: 60rpx;
}

.back-btn {
  background: transparent;
  color: rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 12rpx;
  font-size: 26rpx;
  padding: 20rpx 40rpx;
}

/* 初始化按钮样式 */
.init-section {
  margin-top: 40rpx;
  text-align: center;
}

.init-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 12rpx;
  font-size: 26rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 16rpx;
}

.init-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.init-btn.loading {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.6);
  border-color: rgba(255, 255, 255, 0.3);
}

.init-tip {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.4;
}