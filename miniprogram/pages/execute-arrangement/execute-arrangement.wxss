/* 执行排座页面样式 */
.container {
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f6f6f6;
}

.header {
  margin-bottom: 30rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.config-section {
  margin-bottom: 40rpx;
}

.config-item {
  margin-bottom: 30rpx;
}

.config-item:last-child {
  margin-bottom: 0;
}

.config-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #666;
  box-sizing: border-box;
}

.algorithm-settings {
  margin-bottom: 40rpx;
}

.settings-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  font-size: 30rpx;
  color: #333;
}

.bottom-button {
  margin-top: 30rpx;
}

.primary-btn {
  background-color: #1976D2;
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
  line-height: 90rpx;
}

.primary-btn:active {
  opacity: 0.8;
}

.primary-btn[disabled] {
  background-color: #ccc;
  color: #fff;
}