/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: calc(100vh - 80rpx);
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 功能介绍 */
.features {
  width: 100%;
  margin-bottom: 80rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10px);
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.feature-text {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.feature-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 登录区域 */
.login-section {
  width: 100%;
  text-align: center;
}

.login-btn {
  width: 100%;
  background: #ffffff;
  color: #1976D2;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.login-btn:not(.loading):active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.login-btn.loading {
  background: rgba(255, 255, 255, 0.7);
  color: #999;
}

.login-tips {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.link {
  color: #ffffff;
  text-decoration: underline;
}

/* 已登录状态样式 */
.profile-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: calc(100vh - 80rpx);
}

.user-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 60rpx;
  text-align: center;
  backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  color: #ffffff;
}

.username {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.user-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
}

.user-id {
  display: block;
  font-size: 24rpx;
  opacity: 0.6;
}

.action-buttons {
  width: 100%;
}

.primary-btn {
  width: 100%;
  background: #ffffff;
  color: #1976D2;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.secondary-btn {
  width: 100%;
  background: transparent;
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 28rpx;
}