/* 排座会话管理页面样式 */
.session-management-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 30rpx 40rpx;
  color: white;
  text-align: center;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 操作栏 */
.action-bar {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.create-btn, .refresh-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.create-btn {
  background: #1976D2;
  color: white;
}

.refresh-btn {
  background: white;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 会话列表区域 */
.sessions-section {
  margin: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.session-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.session-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border-left: 6rpx solid #1976D2;
}

.session-item.completed {
  border-left-color: #4CAF50;
}

.session-item.expired {
  border-left-color: #f44336;
}

/* 会话头部 */
.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.session-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.session-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: white;
}

.status-active {
  background: #1976D2;
}

.status-completed {
  background: #4CAF50;
}

.status-expired {
  background: #f44336;
}

.status-published {
  background: #9C27B0;
}

/* 会话信息 */
.session-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 8rpx;
}

.label {
  color: #666;
  font-size: 24rpx;
  width: 120rpx;
}

.value {
  color: #333;
  font-size: 24rpx;
  flex: 1;
}

/* 会话统计 */
.session-stats {
  display: flex;
  gap: 40rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

/* 会话操作 */
.session-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: none;
}

.view-btn {
  background: #f0f0f0;
  color: #666;
}

.execute-btn {
  background: #4CAF50;
  color: white;
}

.publish-btn {
  background: #9C27B0;
  color: white;
}

/* 空状态 */
.no-sessions {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.sub-text {
  display: block;
  font-size: 24rpx;
  margin-top: 16rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 16rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  transform: translateY(50rpx);
  transition: transform 0.3s;
}

.modal-overlay.show .modal-content {
  transform: translateY(0);
}

.modal-content.large {
  max-width: 700rpx;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  border-radius: 50%;
  background: #f0f0f0;
}

/* 弹窗内容 */
.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input, .picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background: white;
}

.picker {
  color: #333;
}

/* 算法配置 */
.algorithm-config {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.config-item {
  margin-bottom: 30rpx;
}

.config-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

/* 详情弹窗 */
.detail-section {
  margin-bottom: 30rpx;
}

.detail-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.detail-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
}

.detail-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stats-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.stats-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 20rpx;
  color: #666;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.cancel-btn {
  background: #f0f0f0;
  color: #666;
}

.confirm-btn {
  background: #1976D2;
  color: white;
}

.action-btn.primary {
  background: #1976D2;
  color: white;
}