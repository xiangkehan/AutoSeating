/* 管理员仪表盘样式 */
.dashboard-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0 0 40rpx 0;
}

/* 头部区域 */
.header {
  background: #1976D2;
  color: white;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome .title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.welcome .role {
  font-size: 24rpx;
  opacity: 0.8;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 12rpx;
  font-size: 22rpx;
  min-width: 80rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
}

.action-btn.loading {
  opacity: 0.6;
  background: rgba(255, 255, 255, 0.1);
}

.action-btn .icon {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.action-btn .text {
  font-size: 20rpx;
}

/* 统计信息区域 */
.stats-section {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1976D2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 功能模块区域 */
.modules-section {
  margin: 20rpx;
}

.module-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.module-group {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.group-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 20rpx;
}

.module-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.module-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.module-item:active {
  background: #e3f2fd;
  border-color: #1976D2;
  transform: scale(0.98);
}

.module-item:hover {
  box-shadow: 0 4rpx 12rpx rgba(25, 118, 210, 0.2);
}

.module-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.module-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.module-desc {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

/* 最近活动区域 */
.activity-section {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.activity-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-time {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.activity-content {
  font-size: 26rpx;
  color: #333;
}

.no-activity {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}