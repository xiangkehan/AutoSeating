<view class="container">
  <view class="header">
    <text class="title">教室管理</text>
    <text class="subtitle">配置教室布局</text>
  </view>
  
  <view class="content">
    <view class="classroom-list">
      <block wx:for="{{classrooms}}" wx:key="id">
        <view class="classroom-item" bindtap="viewClassroom" data-id="{{item.id}}">
          <text class="classroom-name">{{item.name}}</text>
          <text class="classroom-info">{{item.rows}}排{{item.cols}}列</text>
        </view>
      </block>
      
      <view class="empty-state" wx:if="{{classrooms.length === 0}}">
        <text class="empty-text">暂无教室配置</text>
      </view>
    </view>
    
    <view class="bottom-button">
      <button class="primary-btn" bindtap="createClassroom">创建新教室</button>
    </view>
  </view>
</view>