/* pages/seat-selection/seat-selection.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 无会话状态 */
.no-session {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
  padding: 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.refresh-btn {
  background: #1976D2;
  color: #ffffff;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 30rpx;
}

/* 会话信息 */
.session-info {
  background: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.session-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.session-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.session-status.collecting {
  background: #4CAF50;
}

.session-status.ended {
  background: #999;
}

.session-details {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
}

/* 操作说明 */
.instructions {
  background: #ffffff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
}

.instruction-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.instruction-icon {
  width: 20rpx;
  height: 20rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.instruction-icon.preferred {
  background: #4CAF50;
}

.instruction-icon.avoided {
  background: #f44336;
}

.instruction-icon.unavailable {
  background: #bbb;
}

/* 模式选择 */
.mode-selector {
  background: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.mode-option {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #333;
}

.mode-option.active {
  color: #1976D2;
  font-weight: bold;
}

.mode-option radio {
  margin-right: 20rpx;
}

/* 座位图容器 */
.seat-map-container {
  background: #ffffff;
  margin-bottom: 20rpx;
  height: 60vh;
  position: relative;
}

.map-controls {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 10;
  display: flex;
  gap: 10rpx;
}

.control-btn {
  background: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  line-height: 1;
}

.seat-map-scroll {
  width: 100%;
  height: 100%;
}

.seat-map {
  padding: 60rpx 30rpx 30rpx;
  min-width: 100%;
  min-height: 100%;
  position: relative;
  transform-origin: center center;
  transition: transform 0.3s ease;
}

/* 讲台 */
.podium {
  background: #8BC34A;
  color: #ffffff;
  text-align: center;
  padding: 20rpx;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 座位网格 */
.seat-grid {
  display: grid;
  gap: 10rpx;
  margin-bottom: 30rpx;
}

.seat-item {
  aspect-ratio: 1;
  background: #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  font-size: 20rpx;
  color: #666;
  transition: all 0.2s ease;
  min-height: 60rpx;
}

.seat-item.available {
  background: #f5f5f5;
  border: 2rpx solid #ddd;
}

.seat-item.preferred {
  background: #4CAF50;
  color: #ffffff;
  border: 2rpx solid #4CAF50;
  transform: scale(1.1);
}

.seat-item.avoided {
  background: #f44336;
  color: #ffffff;
  border: 2rpx solid #f44336;
  transform: scale(1.05);
}

.seat-item.unavailable {
  background: #bbb;
  color: #888;
  cursor: not-allowed;
}

.seat-item.disabled {
  opacity: 0.6;
  pointer-events: none;
}

.seat-number {
  font-size: 20rpx;
  line-height: 1;
}

.priority-badge {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  background: #FF9800;
  color: #ffffff;
  border-radius: 50%;
  width: 24rpx;
  height: 24rpx;
  font-size: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.unavailable-badge {
  font-size: 24rpx;
  color: #888;
}

/* 选择统计 */
.selection-summary {
  background: #ffffff;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.summary-item {
  margin-bottom: 30rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.summary-content {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.seat-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.seat-tag.preferred {
  background: #4CAF50;
}

.seat-tag.avoided {
  background: #f44336;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
  font-style: italic;
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 30rpx;
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.next-btn {
  width: 100%;
  background: #1976D2;
  color: #ffffff;
  border-radius: 50rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.next-btn[disabled] {
  background: #ccc;
  color: #999;
}