/* pages/audit-logs/audit-logs.wxss */
.audit-logs-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #e0e0e0;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 24rpx;
  background-color: #007aff;
  color: white;
  border-radius: 20rpx;
  border: none;
  font-size: 28rpx;
}

.action-btn .icon {
  font-size: 24rpx;
}

/* 统计面板 */
.statistics-panel {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.statistics-header {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  border: 1px solid #e9ecef;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #007aff;
}

/* 筛选面板 */
.filter-panel {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.filter-header {
  margin-bottom: 30rpx;
}

.filter-grid {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.filter-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.picker-display {
  padding: 20rpx 30rpx;
  background-color: #f8f9fa;
  border: 1px solid #e9ecef;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #333;
  min-width: 200rpx;
  text-align: center;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.filter-btn {
  padding: 20rpx 40rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: none;
}

.filter-btn.primary {
  background-color: #007aff;
  color: white;
}

.filter-btn.secondary {
  background-color: #f8f9fa;
  color: #666;
  border: 1px solid #e9ecef;
}

/* 日志列表 */
.logs-list {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.log-item {
  padding: 40rpx;
  border-bottom: 1px solid #f0f0f0;
  position: relative;
}

.log-item:last-child {
  border-bottom: none;
}

.log-item:active {
  background-color: #f8f9fa;
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.log-operation {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.operation-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.severity-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.severity-low {
  background-color: #d4edda;
  color: #155724;
}

.severity-medium {
  background-color: #fff3cd;
  color: #856404;
}

.severity-high {
  background-color: #f8d7da;
  color: #721c24;
}

.log-time {
  font-size: 24rpx;
  color: #999;
}

.log-content {
  margin-bottom: 20rpx;
}

.log-detail {
  display: flex;
  margin-bottom: 12rpx;
  align-items: flex-start;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.log-status {
  display: flex;
  justify-content: flex-end;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.status-success {
  background-color: #d4edda;
  color: #155724;
}

.status-error {
  background-color: #f8d7da;
  color: #721c24;
}

/* 加载状态 */
.load-more {
  padding: 60rpx;
  text-align: center;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.load-tip {
  font-size: 26rpx;
  color: #999;
}

.no-more {
  padding: 60rpx;
  text-align: center;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}