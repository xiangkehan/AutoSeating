/* pages/wish-submit/wish-submit.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 150rpx;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 总结卡片样式 */
.summary-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modify-btn {
  padding: 10rpx 20rpx;
  background-color: #1976D2;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.summary-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.preference-group {
  margin-bottom: 30rpx;
}

.preference-group:last-child {
  margin-bottom: 0;
}

.group-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

/* 座位列表样式 */
.seat-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.seat-item {
  padding: 10rpx 20rpx;
  background-color: #e8f5e8;
  color: #2ed573;
  border-radius: 15rpx;
  font-size: 24rpx;
  border: 1rpx solid #2ed573;
}

.seat-item.avoided {
  background-color: #ffeaea;
  color: #ff4757;
  border-color: #ff4757;
}

/* 邻座列表样式 */
.neighbor-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.neighbor-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  border-left: 6rpx solid #2ed573;
}

.neighbor-item.avoided {
  border-left-color: #ff4757;
}

.neighbor-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}

.neighbor-relation,
.neighbor-reason {
  font-size: 22rpx;
  color: #666;
  padding: 5rpx 15rpx;
  background-color: white;
  border-radius: 10rpx;
}

/* 特殊需求样式 */
.special-requirements-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 15rpx;
  border-left: 6rpx solid #ffa502;
}

/* 无偏好状态 */
.no-preference {
  text-align: center;
  padding: 40rpx 20rpx;
}

.no-preference-text {
  font-size: 26rpx;
  color: #999;
}

/* 提交说明 */
.notice-section {
  margin-bottom: 30rpx;
}

.notice-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.notice-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.notice-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.notice-content:last-child {
  margin-bottom: 0;
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: white;
  border-top: 1rpx solid #e9ecef;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: #1976D2;
  color: white;
  border-radius: 25rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.submitting {
  background-color: #cccccc;
  color: #666666;
}

.submit-btn[disabled] {
  background-color: #cccccc;
  color: #666666;
}